<h2 class="text-center mt-5">Add Location</h2>
<div class="input-container">
    <form>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Location</label>
          <input type="text" class="form-control" id="exampleInputEmail1" name="loc" aria-describedby="emailHelp">
        </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label" >Latitude</label>
                <input type="number" class="form-control" id="latAdd" name="latAdd" readonly placeholder="name@example.com" value="0">
            </div>
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Longitude</label>
                <input type="number" class="form-control" id="lngAdd" name="lngAdd" readonly placeholder="name@example.com" value="0">
            </div>
        <button type="submit" class="btn btn-success mt-3">Submit</button>
      </form>
</div>
